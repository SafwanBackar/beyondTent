<%- include('../partials/header') %>
    <div class="container">
        <div class="row">
            <div class="col-md-3">
                <p class="lead">BeyondTent</p>
                <div class="list-group">
                    <div class="list-group-item active">Info 1</div>
                    <div class="list-group-item">Info 2</div>
                    <div class="list-group-item">Info 3</div>
                </div>
            </div>
            <div class="col-md-9">
                <div class="thumbnail">
                    <img class="img-responsive" src="<%= campground.image %>">
                    <div class="caption">
                        <h4 class="pull-right">$9.00/night</h4>
                        <h4><a href="">
                                <%= campground.name %>
                            </a>
                        </h4>
                        <p>
                            <em>Submitted by
                                <strong>
                                    <%= campground.author.username %>
                                </strong></em>
                        </p>
                        <p>
                            <%= campground.description %>
                        </p>
                    </div>
                </div>
                <div class="well">
                    <div class="text-right">
                        <a class="btn btn-success" href="/campgrounds/<%= campground._id %>/comments/new">Add new
                            comment</a>
                    </div>
                    <hr>
                    <% campground.comments.forEach(function(comment){ %>
                        <div class="row">
                            <div class="col-md-12">
                                <strong>
                                    <%= comment.author.username %>
                                </strong><span class="pull-right">10 Days ago</span>
                                <p>
                                    <%= comment.text%>
                                </p>
                            </div>
                        </div>

                        <% }) %>
                </div>
            </div>
        </div>
    </div>





    <%- include ('../partials/footer') %>